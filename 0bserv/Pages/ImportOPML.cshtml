@page
@model ImportOPMLModel
@{
    ViewData["Title"] = "Importa OPML";
}

<h2>Importa OPML</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="opmlFile">Seleziona il file OPML:</label>
        <input type="file" name="opmlFile" id="opmlFile" class="form-control-file" accept=".opml">
    </div>
    <button type="submit" class="btn btn-primary">Importa</button>
</form>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info mt-3" role="alert">
        @ViewBag.Message
    </div>
}
