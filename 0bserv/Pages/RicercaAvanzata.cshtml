@page
@model SearchModel
@{
    ViewData["Title"] = "Ricerca Avanzata";
}

<h2>Ricerca Avanzata</h2>

<form method="post" asp-page-handler="SearchAsync" asp-page="RicercaAvanzata">
    <div class="form-group">
        <label>Parola chiave:</label>
        <input type="text" asp-for="SearchInput.Keyword" class="form-control" />
        <span asp-validation-for="SearchInput.Keyword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Data di inizio:</label>
        <input type="date" asp-for="SearchInput.StartDate" class="form-control" />
    </div>
    <div class="form-group">
        <label>Data di fine:</label>
        <input type="date" asp-for="SearchInput.EndDate" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Cerca</button>
</form>

@if (!Model.SearchResults.Any())
{
    <p>Nessun risultato trovato.</p>
}
else
{
    <h3>Risultati della ricerca:</h3>
    <ul>
        @foreach (var result in Model.SearchResults)
        {
            <li>
                <a href="@Url.Page("/DettItem", new { idd = result.Id })">
                    @result.Title - @result.PublishDate.ToString("dd/MM/yyyy HH:mm")
                </a>
            </li>
        }
    </ul>

    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Page("./RicercaAvanzata", new { CurrentPage = 1 })">Prima</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="@Url.Page("./RicercaAvanzata", new { CurrentPage = Model.CurrentPage - 1 })">Precedente</a>
                    </li>
                }

                @for (int i = Math.Max(1, Model.CurrentPage - 5); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 5); i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                        <a class="page-link" href="@Url.Page("./RicercaAvanzata", new { CurrentPage = i })">@i</a>
                    </li>
                }

                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Page("./RicercaAvanzata", new { CurrentPage = Model.CurrentPage + 1 })">Successiva</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="@Url.Page("./RicercaAvanzata", new { CurrentPage = Model.TotalPages })">Ultima</a>
                    </li>
                }
            </ul>
        </nav>
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
