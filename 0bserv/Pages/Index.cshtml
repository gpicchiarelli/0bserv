@page
@model IndexModel
@{
    ViewData["Title"] = "Elenco elementi";
}

<div class="container mt-4">
    <h2 class="text-center">Elenco elementi</h2>
    <div class="row">
        <div class="col">
            <ul class="list-group">
                @foreach (var item in Model.Contenuti)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <!-- Titolo del contenuto come collegamento al dettaglio -->
                        <a href="@Url.Page("/DettaglioContenuto", new { id = item.Id })">@item.Titolo</a>
                        <!-- Quantità o altro dettaglio se necessario -->
                        <span class="badge badge-primary badge-pill">@item.Titolo</span>
                    </li>
                }
            </ul>
        </div>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.PaginaCorrente == 1 ? "disabled" : "")">
                        <a class="page-link" href="?pagina=1" tabindex="-1">Prima</a>
                    </li>
                    @for (int i = 1; i <= Model.NumeroPagine; i++)
                    {
                        <li class="page-item @(Model.PaginaCorrente == i ? "active" : "")">
                            <a class="page-link" href="?pagina=@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.PaginaCorrente == Model.NumeroPagine ? "disabled" : "")">
                        <a class="page-link" href="?pagina=@Model.NumeroPagine">Ultima</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>